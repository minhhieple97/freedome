{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": ".",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "./tsconfig.build.json"
  },
  "projects": {
    "common": {
      "type": "library",
      "root": "common",
      "entryFile": "index",
      "sourceRoot": "common/src",
      "compilerOptions": {
        "tsConfigPath": "common/tsconfig.lib.json"
      }
    },
    "notifications": {
      "type": "application",
      "root": "microservices/notifications",
      "entryFile": "main",
      "sourceRoot": "microservices/notifications/src",
      "compilerOptions": {
        "tsConfigPath": "microservices/notifications/tsconfig.app.json",
        "assets": [
          {
            "include": "microservices/notifications/src/config/email-templates/",
            "watchAssets": true
          }
        ]
      }
    }
  },
  "monorepo": true,
  "root": "."
}
