{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@freedome/common": ["common/src"],
      "@freedome/common/*": ["common/src/*"],
      "@gateway/config": ["microservices/gateway/src/config"],
      "@gateway/config/*": ["microservices/gateway/src/config/*"],
      "@gateway/common": ["microservices/gateway/src/common"],
      "@gateway/common/*": ["microservices/gateway/src/common/*"],
      "@notifications/config": ["microservices/notifications/src/config"],
      "@notifications/config/*": ["microservices/notifications/src/config/*"],
      "@notifications/common": ["microservices/notifications/src/common"],
      "@notifications/common/*": ["microservices/notifications/src/common/*"]
    }
  }
}
